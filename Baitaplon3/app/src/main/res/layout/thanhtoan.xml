<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F8F0F7"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f7b8d2"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hình Thức Giao Hàng"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#333"
            android:fontFamily="sans-serif"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Address Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ Nhận Hàng:"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trần Thị Phương"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SDT: 0985684568"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay đổi"
            android:textSize="14sp"
            android:textColor="#FF4081"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Shipping Method -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn Hình Thức Giao Hàng"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkboxShipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Giao hàng tiết kiệm"
            android:textColor="#333"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Product Details -->
    <LinearLayout
        android:id="@+id/sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ha"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/iphone13"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:id="@+id/htsp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIVO Y28"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.790.000 đ"
                android:textSize="14sp"
                android:textColor="#FF4081" />
        </LinearLayout>
    </LinearLayout>

    <!-- Total Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thành Tiền: 5.790.000 Đ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="16dp" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/btmua"
        android:layout_width="322dp"
        android:layout_height="53dp"
        android:layout_margin="25dp"

        android:backgroundTint="#f7b8d2"
        android:text="Tiếp Tục"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- Thanh công cụ phía dưới -->
    <include
        layout="@layout/thanhcongcuduoi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</LinearLayout>
