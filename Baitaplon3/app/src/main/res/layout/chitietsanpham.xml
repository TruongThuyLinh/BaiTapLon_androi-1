<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".drawerLayout.activity1.MainActivity">
    <!-- Thanh công cụ phía dưới -->

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/img_2"
        android:contentDescription="Back"
        android:scaleType="fitCenter" />

    <!-- Container cho sản phẩm -->

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="555dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerInside"
            android:src="@drawable/iphone13" />

        <!-- Thông tin sản phẩm -->

        <!-- Dung lượng -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="vivo Y28"
            android:textSize="27sp"
            android:textStyle="bold" />

        <!-- Giá tiền -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="5.790.000đ"
            android:textColor="#FF0000"
            android:textSize="27sp"
            android:textStyle="bold" />
        <!-- Nút Thêm vào giỏ hàng -->
        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="Thêm vào giỏ hàng" />

    </LinearLayout>
    <Button
        android:id="@+id/btnBuy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#f7b8d2"
        android:text="Chọn Mua"
        android:textSize="28sp" />

    <include
        layout="@layout/thanhcongcuduoi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- Nút quay lại -->
</LinearLayout>